[include]
    path = ~/.gitalias
    path = ~/.gitconfig_local
[core]
    excludesfile = ~/.gitignore_global
    editor = nvim
    autocrlf = input
    whitespace = fix,blank-at-eol,blank-at-eof,tab-in-indent,-space-before-tab
[init]
    defaultBranch = main
[diff]
    algorithm = histogram
[push]
    default = current
[commit]
    gpgSign = true
[tag]
    gpgSign = true
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
